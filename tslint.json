{
  "extends": ["tslint-eslint-rules"],

  "rules": {
    "adjacent-overload-signatures": true,
    "align": [true, "parameters"],
    "await-promise": [false, "Thenable"],
    "brace-style": [true, "1tbs", { "allowSingleLine": true }],
    "callable-types": false,
    "class-name": true,
    "comment-format": [true, "check-space"],
    "eofline": true,
    "import-blacklist": [true, "rxjs"],
    "import-spacing": true,
    "indent": [true, "spaces"],
    "interface-over-type-literal": true,
    "label-position": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-console": [false, "debug", "info", "time", "timeEnd", "trace"],
    "no-conditional-assignment": true,
    "no-construct": true,
    "no-control-regex": true,
    "no-debugger": true,
    "no-duplicate-variable": true,
    "no-duplicate-imports": false,
    "no-empty-character-class": true,
    "no-eval": true,
    "no-extra-boolean-cast": true,
    "no-extra-semi": true,
    "no-inferrable-types": [true, "ignore-params"],
    "no-inner-declarations": [true, "both"],
    "no-internal-module": true,
    "no-input-rename": false,
    "no-invalid-regexp": true,
    "no-invalid-this": [true, "check-function-in-method"],
    "no-irregular-whitespace": true,
    "no-misused-new": true,
    "no-namespace": [false, "allow-declarations"],
    "no-non-null-assertion": false,
    "no-null-keyword": true,
    "no-reference": true,
    "no-regex-spaces": true,
    "no-require-imports": false,
    "no-shadowed-variable": false,
    "no-sparse-arrays": true,
    "no-string-literal": false,
    "no-string-throw": true,
    "no-switch-case-fall-through": true,
    "no-trailing-whitespace": true,
    "no-unused-expression": true,
    "no-use-before-declare": false,
    "no-var-keyword": true,
    "no-var-requires": false,
    "object-literal-key-quotes": [true, "as-needed"],
    "one-line": [
      true,
      "check-open-brace",
      "check-catch",
      "check-else",
      "check-whitespace"
    ],
    "one-variable-per-declaration": true,
    "ordered-imports": true,
    "prefer-const": [
      true,
      {
        "destructuring": "all"
      }
    ],
    "prefer-for-of": true,
    "promise-function-async": false,
    "quotemark": [true, "single", "avoid-escape"],
    "semicolon": [true, "never"],
    "space-before-function-paren": [true, "always"],
    "trailing-comma": [false, { "multiline": "always", "singleline": "never" }],
    "triple-equals": [true, "allow-null-check"],
    "typedef": [true, "property-declaration"],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "unified-signatures": false,
    "valid-typeof": true,
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-type",
      "check-typecast",
      "check-preblock"
    ]
  },
  "excluded": {
    "whitespace": ["check-module"],
    "curly": true,
    "forin": true,
    "object-literal-sort-keys": true,
    "no-for-in-array": true,
    "no-unused-variable": [true],
    "no-unnecessary-qualifier": true,
    "restrict-plus-operands": true,
    "member-ordering": [
      true,
      {
        "order": [
          "constructor",
          "public-static-field",
          "private-static-field",
          "static-before-instance",
          "variables-before-functions"
        ]
      }
    ]
  }
}
